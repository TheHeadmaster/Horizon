<UserControl x:Class="Horizon.Controls.CodePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Horizon.Controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:controls="clr-namespace:Horizon.Controls"
             xmlns:ae="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="1000" Loaded="UserControl_Loaded">
    <ae:TextEditor x:Name="TEditor" Document="{Binding Model.Document, UpdateSourceTrigger=PropertyChanged}" TextChanged="TEditor_TextChanged">
    </ae:TextEditor>
</UserControl>