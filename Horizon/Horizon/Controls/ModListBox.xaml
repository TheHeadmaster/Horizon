<UserControl x:Class="Horizon.Controls.ModListBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Horizon.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="300">
    <TreeView Background="{StaticResource BaseBackgroundColor}" BorderBrush="{StaticResource BaseBorderColor}">
        <TreeViewItem Header="Enabled Mods" IsExpanded="True" Foreground="{StaticResource BaseFontColor}" FontSize="18" ItemContainerStyle="{DynamicResource ModListSubItemTemplate}" ItemsSource="{Binding EnabledMods, UpdateSourceTrigger=PropertyChanged}" />
        <TreeViewItem Header="Disabled Mods" IsExpanded="True" Foreground="{StaticResource BaseFontColor}" FontSize="18" ItemContainerStyle="{DynamicResource ModListSubItemTemplate}" ItemsSource="{Binding DisabledMods, UpdateSourceTrigger=PropertyChanged}" />
    </TreeView>
</UserControl>