<rui:ReactiveUserControl x:Class="Horizon.Controls.Output"
                         x:TypeArguments="vm:OutputViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Horizon.Controls"
             xmlns:vm="clr-namespace:Horizon.ViewModels"
             xmlns:rui="http://reactiveui.net"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <local:MagneticScrollViewer Background="{StaticResource BaseBackgroundColor}">
        <TextBox x:Name="OutputTextBox" Background="Transparent" Foreground="{StaticResource BaseFontColor}" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Top" />
    </local:MagneticScrollViewer>
</rui:ReactiveUserControl>