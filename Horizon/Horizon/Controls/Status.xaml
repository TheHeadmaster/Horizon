<UserControl x:Class="Horizon.Controls.Status"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Horizon.Controls"
             mc:Ignorable="d"
             d:DesignHeight="24" d:DesignWidth="1366">
    <StatusBar Foreground="#FFFFFFFF" Background="{Binding StatusBarColor, UpdateSourceTrigger=PropertyChanged}">
        <StatusBarItem>
            <TextBlock x:Name="StateText" Text="{Binding StatusState, UpdateSourceTrigger=PropertyChanged}" />
        </StatusBarItem>
    </StatusBar>
</UserControl>