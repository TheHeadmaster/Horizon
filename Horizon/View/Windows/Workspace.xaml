                                  xmlns:controls="clr-namespace:Horizon.View.Controls"
                                  xmlns:windows="clr-namespace:Horizon.View.Windows"
                                  xmlns:vm="clr-namespace:Horizon.ViewModel"
                                  d:DataContext="{d:DesignInstance Type=vm:WorkspaceViewModel}"
